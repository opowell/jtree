<div {{~cssClass '!summary-column'}}>
    {{#any summaryGroup}}
        <dl {{~cssClass '!dl-summary-callout'}}>
            {{#each summaryGroup}}
                <dt>{{linkWithSignature this}}</dt>
                {{!-- Always include <dd> tag, which is required for validity --}}
                <dd>
                    {{#if summary}}
                        {{#embed 'summary'}}{{/embed}}
                    {{/if}}
                </dd>
            {{/each}}
        </dl>
    {{/any}}
</div>
