app.title='live ranking';
app.groupSize= 2;


var stage1 = app.newStage('stage1');
stage1.playerStart = function(player){
  player.x = Math.random();
}
stage1.updateObject='group';
stage1.activeScreen = `
  <ul>
    <li v-for='player in group.players'>Player {{ player.idInGroup }}: {{ player.guess | round(3) }}</li>
  </ul>
`;
